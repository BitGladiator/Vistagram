{
  "name": "user-service",
  "version": "1.0.0",
  "description": "Vistagram User Service",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test node -r dotenv/config ./node_modules/.bin/jest --runInBand --forceExit",
    "test:watch": "dotenv_config_path=.env.test NODE_ENV=test node -r dotenv/config ./node_modules/.bin/jest --watch --runInBand",
    "test:coverage": "dotenv_config_path=.env.test NODE_ENV=test node -r dotenv/config ./node_modules/.bin/jest --coverage --runInBand --forceExit"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "setupFilesAfterEnv": [
      "./src/__tests__/setup.js"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}